{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/ai-proxy/**/*.ts": {
      "maxDuration": 60,
      "memory": 2048
    },
    "app/api/webhooks/**/*.ts": {
      "maxDuration": 10,
      "memory": 512
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "/api/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "/app/dashboard",
      "permanent": false
    }
  ],
  "regions": ["iad1", "sfo1"],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://app.meterr.ai",
    "NEXT_PUBLIC_API_URL": "https://app.meterr.ai/api"
  }
}
