{
  "name": "supabase-mcp",
  "version": "1.0.0",
  "description": "MCP server for Supabase operations",
  "capabilities": [
    "database:read",
    "database:write",
    "auth:manage",
    "storage:manage",
    "functions:invoke"
  ],
  "configuration": {
    "url": "${SUPABASE_URL}",
    "serviceKey": "${SUPABASE_SERVICE_KEY}",
    "anonKey": "${SUPABASE_ANON_KEY}"
  },
  "operations": {
    "database": ["query", "insert", "update", "delete", "upsert"],
    "auth": ["signUp", "signIn", "signOut", "getUser", "updateUser"],
    "storage": ["upload", "download", "delete", "list"]
  }
}
