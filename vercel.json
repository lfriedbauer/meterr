{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm turbo build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": null,
  "ignoreCommand": "npx turbo-ignore",
  "outputDirectory": null,
  "devCommand": "pnpm dev",
  "builds": [
    {
      "src": "apps/app/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/marketing/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/admin/package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "apps/app/app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "apps/marketing/app/api/**/*.ts": {
      "maxDuration": 10,
      "memory": 512
    }
  },
  "crons": [
    {
      "path": "/api/cron/usage-sync",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/cost-alerts",
      "schedule": "0 */1 * * *"
    }
  ],
  "regions": ["iad1"],
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1",
    "NODE_ENV": "production"
  }
}